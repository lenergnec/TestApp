<?xml version="1.0" encoding="utf-8"?>


    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:background="@color/NectarWhite"
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NectarWhite"
            tools:context=".MainActivity">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="50dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/reporterendimientoflaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="25dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/impuestosflaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/descuentosflaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="60dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/mantenimientoflaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/co2flaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="60dp"
                android:background="@color/NectarWhite"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/costoflaticon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:text="Reporte de Rendimiento"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:text="Impuestos Slv"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:text="Descuentos"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:text="Mntto P/C"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:text="CO2"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton6" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="114dp"
                android:layout_height="51dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:text="Calc. Costo x Km"
                android:textAlignment="center"
                android:textColor="@color/NectarBlue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Selecciona una opcion para operar"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/NectarBlue"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="DeveloppÃ© par lenerg"
                android:textAlignment="center"
                android:textColor="@color/PvuAnaranjadofondoletra"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            android:background="@drawable/fondo_gradiante1"
            app:itemTextColor="@color/NectarBlue"
            app:subheaderColor="@color/NectarRojo"
            app:itemIconSize="32dp"
            app:itemIconTint="@color/NectarBlue">

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

